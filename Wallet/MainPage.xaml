<Page
    x:Class="Wallet.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    xmlns:data="using:Wallet.Domain.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="98*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="5,10,9,0" TextWrapping="Wrap" FontFamily="Segoe UI Light" Height="24" VerticalAlignment="Top" HorizontalAlignment="Stretch"><Run Text="Lista "/><Run Text="kont"/></TextBlock>

        <ListView x:Name="AccountsList" ItemsSource="{x:Bind UserAccountsList}" HorizontalAlignment="Left" Height="677" VerticalAlignment="Top" Width="261" Margin="5,33,0,0" IsItemClickEnabled="True" ItemClick="AccountsList_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate x:Name="Item" x:DataType="data:UserAccountClass">
                    <StackPanel>
                        <TextBlock Text="{x:Bind UserAccount.DisplayName}" Style="{ThemeResource BaseTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}"/>
                        <TextBlock Text="{x:Bind UserAccount.Balance}" Style="{ThemeResource BodyTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                        <TextBlock Text="{x:Bind UserAccount.Id }" Style="{ThemeResource BodyTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextChromeBlackMediumLowBrush}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:Name="TransactionsList" ItemsSource="{x:Bind AccountTransactionsList}" HorizontalAlignment="Left" Height="677" Margin="0,33,0,0" VerticalAlignment="Top" Width="984" Grid.Column="1" IsRightTapEnabled="False" IsHoldingEnabled="False" IsDoubleTapEnabled="False">
            <ListView.ItemTemplate>
                <DataTemplate x:Name="Transaction" x:DataType="data:MoneyTransactionClass">
                    <StackPanel>
                        <TextBlock Text="{x:Bind MoneyTransaction.Description}" Style="{ThemeResource BaseTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
